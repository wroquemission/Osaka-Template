{
    "name": "osaka-template",
    "productName": "Osaka Template",
    "version": "1.0.0",
    "description": "Takes templates and lists as input and exports PDFs as output!",
    "build": {
        "appId": "com.kobemission.OsakaTemplate",
        "mac": {
            "target": "pkg",
            "icon": "assets/icon.png",
            "darkModeSupport": true
        },
        "win": {
            "target": "nsis",
            "icon": "assets/icon.png"
        }
    },
    "scripts": {
        "start": "electron .",
        "dist-all": "electron-builder -mw",
        "dist-win": "electron-builder -w",
        "dist-mac": "electron-builder -m"
    },
    "main": "mjs/main.js",
    "author": "William Roque",
    "email": "William Roque <william.roque@missionary.org>",
    "license": "ISC",
    "devDependencies": {
        "electron": "^4.1.4",
        "electron-builder": "^20.40.2"
    },
    "dependencies": {
        "docxtemplater": "^3.47.4",
        "electron-window-state": "^5.0.3",
        "fix-path": "^2.1.0",
        "jspdf": "^2.5.1",
        "lodash": "^4.17.21",
        "pizzip": "^3.1.7",
        "shelljs": "^0.8.3"
    }
}
